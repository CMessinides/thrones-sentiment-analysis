mixin visualization(id)
	.c-section
			.o-container.o-container--extra-wide
				div(id=id)
					.c-alert.o-container(data-loading-indicator='')
						.c-alert__icon.c-spinner
						p.c-alert__text
							strong.c-alert__heading Sending a raven to the Citadel&hellip;
							span.c-alert__body This visualization should load shortly.
					noscript
						.c-alert.c-alert--bold.o-container
							.c-alert__icon.c-alert__icon--halo
								svg.c-icon.c-icon--fill
									use(href="#icon-error")
							p.c-alert__text
								strong.c-alert__heading JavaScript is not enabled.
								span.c-alert__body
									| The visualizations in this essay require JavaScript. Please
									| enable JavaScript for this site to view this visualization.

mixin textContent
	.c-section.c-section--text
		.o-container.o-rich-text
			block

mixin exampleComments(caption="Comments")
	figure.c-section.c-section--text&attributes(attributes)
		table.o-container.max-w-3xl
			caption.sr-only= caption
			thead.sr-only
				tr
					th(scope="col") Comment ID
					th(scope="col") Comment
					th(scope="col") Sentiment Score
			tbody.c-comments
				block

mixin exampleComment(username="Reddit_User", age="1 minute", score="0.0")
	tr.c-comment.c-comments__item
		td.c-comment__wrapper
			blockquote.c-comment__card
				span.c-comment__details(aria-hidden="true") #[span= username] &bull; #[time #{age} ago]
				p.c-comment__text
					block
		td.c-comment__score
			span.c-comment__score-label(aria-hidden="true") Sentiment Score:
			span.c-comment__score-amount= score

mixin __temporaryWIPNotice
	p
		small.italic.text-grey-600 [WIP &mdash; more coming soon.]
